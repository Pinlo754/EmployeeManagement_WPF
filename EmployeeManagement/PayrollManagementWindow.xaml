<Window x:Class="EmployeeManagement.PayrollManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Lương" Height="500" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock Text="Chọn nhân viên:" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Employees}"
              SelectedItem="{Binding SelectedEmployee}"
              DisplayMemberPath="FullName"
              Width="200"/>

            <TextBlock Text="Tháng:" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Months}" 
              SelectedItem="{Binding SelectedMonth}" 
              Width="80"/>

            <TextBlock Text="Quý:" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Quarters}" 
              SelectedItem="{Binding SelectedQuarter}" 
              Width="80"/>

            <Button Content="Xóa filter" Margin="10,0" Click="ClearFilter_Click"/>
        </StackPanel>


        <DataGrid ItemsSource="{Binding Payrolls}"
              SelectedItem="{Binding SelectedPayroll}"
              AutoGenerateColumns="False"
              Grid.Row="1"
              Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PayrollId}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Mã NV" Binding="{Binding EmployeeId}" />
                <DataGridTextColumn Header="Họ tên" Binding="{Binding Employee.FullName}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Lương cơ bản" Binding="{Binding BaseSalary}" />
                <DataGridTextColumn Header="Phụ cấp" Binding="{Binding Allowances}" />
                <DataGridTextColumn Header="Thưởng" Binding="{Binding Bonuses}" />
                <DataGridTextColumn Header="Phạt" Binding="{Binding Penalties}" />
                <DataGridTextColumn Header="Tổng thu nhập" Binding="{Binding TotalIncome}" IsReadOnly="True" />
                <DataGridTextColumn Header="Ngày trả" Binding="{Binding PayDate}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
            <Button Content="Xuất Excel" Margin="5" Click="ExportExcel_Click"/>
            <Button Content="Thêm" Command="{Binding AddCommand}" Margin="5" Click="AddPayroll_Click"/>
            <Button Content="Sửa" Command="{Binding UpdateCommand}" Margin="5" Click="UpdatePayroll_Click"/>
            <Button Content="Xóa" Command="{Binding DeleteCommand}" Margin="5" Click="DeletePayroll_Click"/>
        </StackPanel>
    </Grid>
</Window>
