<Window x:Class="EmployeeManagement.PayrollFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin bảng lương"
        Height="484" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nhập thông tin bảng lương"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0 0 0 15"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="0 10 0 10">
            <TextBlock Text="Nhân viên:"/>
            <ComboBox ItemsSource="{Binding Employees}"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="EmployeeId"
                      SelectedValue="{Binding Payroll.EmployeeId}"
                      Margin="0 5 0 10"/>

            <TextBlock Text="Lương cơ bản:"/>
            <TextBox Text="{Binding Payroll.BaseSalary}" Margin="0 5 0 10"/>

            <TextBlock Text="Phụ cấp:"/>
            <TextBox Text="{Binding Payroll.Allowances}" Margin="0 5 0 10"/>

            <TextBlock Text="Thưởng:"/>
            <TextBox Text="{Binding Payroll.Bonuses}" Margin="0 5 0 10"/>

            <TextBlock Text="Phạt:"/>
            <TextBox Text="{Binding Payroll.Penalties}" Margin="0 5 0 10"/>

            <TextBlock Text="Ngày trả:"/>
            <DatePicker SelectedDate="{Binding Payroll.PayDate}" Margin="0 5 0 10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
            <Button Content="Lưu" Width="80" Margin="10 0"
                    Command="{Binding SaveCommand}"/>
            <Button Content="Hủy" Width="80" Margin="10 0"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
