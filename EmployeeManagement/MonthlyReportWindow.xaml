<Window x:Class="EmployeeManagement.MonthlyReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Báo cáo Chấm công Hàng tháng" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Báo cáo Chấm công Hàng tháng" FontSize="22" FontWeight="Bold" 
                   Foreground="#007ACC" Margin="0,0,0,15"/>

        <Border Grid.Row="1" Background="#F4F7FC" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Chọn tháng:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="MonthComboBox" Width="100" Margin="5"/>

                <TextBlock Text="Chọn năm:" VerticalAlignment="Center" Margin="15,5,5,5"/>
                <ComboBox x:Name="YearComboBox" Width="100" Margin="5"/>

                <Button x:Name="GenerateButton" Content="Tạo Báo cáo" Width="100" Height="30" Margin="20,5,5,5" 
                        Click="GenerateButton_Click"/>
            </StackPanel>
        </Border>

        <DataGrid x:Name="ReportDataGrid" Grid.Row="2"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectionMode="Single"
                  AlternatingRowBackground="#FAFAFA"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nhân viên" Binding="{Binding EmployeeName}" Width="160"/>
                <DataGridTextColumn Header="Phòng ban" Binding="{Binding DepartmentName}" Width="140"/>
                <DataGridTextColumn Header="Số ngày công" Binding="{Binding TotalWorkDays}" Width="120"/>
                <DataGridTextColumn Header="Số ngày nghỉ" Binding="{Binding TotalLeaveDays}" Width="120"/>
                <DataGridTextColumn Header="Tổng giờ OT" Binding="{Binding TotalOTHours, StringFormat='N2'}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Đóng" Grid.Row="3" Width="80" Height="30" Margin="0,15,0,0"
                HorizontalAlignment="Right" IsCancel="True"/>
    </Grid>
</Window>