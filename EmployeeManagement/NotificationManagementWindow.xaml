<Window x:Class="EmployeeManagement.NotificationManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Thông báo" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- TextBlock chung -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <!-- Button chung -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#003F6B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListView hiện đại -->
        <Style TargetType="ListView">
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>

        <!-- GridViewHeader -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#E8F0FE"/>
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Quản lý Thông báo" FontSize="22" FontWeight="Bold" 
                   Foreground="#007ACC" Margin="0,0,0,15"/>

        <ListView x:Name="NotificationsListView" Grid.Row="1" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tiêu đề" DisplayMemberBinding="{Binding Title}" Width="150"/>
                    <GridViewColumn Header="Nội dung" DisplayMemberBinding="{Binding Message}" Width="250"/>
                    <GridViewColumn Header="Đối tượng" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TargetDepartment.DepartmentName, FallbackValue='Tất cả phòng ban'}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Người tạo" DisplayMemberBinding="{Binding CreatedByNavigation.FullName}" Width="120"/>
                    <GridViewColumn Header="Ngày tạo" DisplayMemberBinding="{Binding CreatedAt, StringFormat='dd/MM/yyyy HH:mm'}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="AddButton" Content="Thêm mới" Margin="5" Click="AddButton_Click"/>
            <Button x:Name="EditButton" Content="Sửa" Margin="5" Click="EditButton_Click"/>
            <Button x:Name="DeleteButton" Content="Xóa" Margin="5" Click="DeleteButton_Click"/>
            <Button x:Name="CloseButton" Content="Đóng" Margin="20,5,5,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
