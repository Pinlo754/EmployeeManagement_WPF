<Window x:Class="EmployeeManagement.TimesheetManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Chấm công" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Quản lý Chấm công" FontSize="22" FontWeight="Bold" 
                   Foreground="#007ACC" Margin="0,0,0,15"/>

        <Border Grid.Row="1" Background="#F4F7FC" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ngày:" VerticalAlignment="Center" Margin="5"/>
                <DatePicker x:Name="DatePickerFilter" Width="130" Margin="5"/>

                <TextBlock Text="Phòng ban:" VerticalAlignment="Center" Margin="15,5,5,5"/>
                <ComboBox x:Name="DepartmentComboBoxFilter" Width="180" Margin="5"
                          DisplayMemberPath="DepartmentName"
                          SelectedValuePath="DepartmentId"/>

                <TextBlock Text="Tên NV:" VerticalAlignment="Center" Margin="15,5,5,5"/>
                <TextBox x:Name="EmployeeNameTextBoxFilter" Width="150" Margin="5"/>

                <Button x:Name="FilterButton" Content="Lọc" Width="80" Height="30" Margin="20,5,5,5" Click="FilterButton_Click"/>
                <Button x:Name="ClearFilterButton" Content="Xóa lọc" Width="80" Height="30" Margin="5" Click="ClearFilterButton_Click"/>
                <Button Content="Báo cáo tháng" Width="80" Height="30" Margin="5" Click="MonthlyReport_Click"/>
            </StackPanel>
        </Border>

        <DataGrid x:Name="TimesheetsDataGrid" Grid.Row="2"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectionMode="Single"
                  AlternatingRowBackground="#FAFAFA"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên NV" Binding="{Binding Employee.FullName}" Width="150"/>
                <DataGridTextColumn Header="Phòng ban" Binding="{Binding Employee.Department.DepartmentName}" Width="120"/>
                <DataGridTextColumn Header="Ngày làm" Binding="{Binding WorkDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                <DataGridTextColumn Header="Check In" Binding="{Binding CheckIn, StringFormat='HH:mm:ss'}" Width="100"/>
                <DataGridTextColumn Header="Check Out" Binding="{Binding CheckOut, StringFormat='HH:mm:ss'}" Width="100"/>
                <DataGridTextColumn Header="Số giờ" Binding="{Binding HoursWorked, StringFormat='N2'}" Width="80"/>
                <DataGridTextColumn Header="OT" Binding="{Binding OvertimeHours, StringFormat='N2'}" Width="80"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="*" MinWidth="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="EditButton" Content="Sửa" Width="80" Height="30" Margin="5" Click="EditButton_Click"/>
            <Button x:Name="DeleteButton" Content="Xóa" Width="80" Height="30" Margin="5" Click="DeleteButton_Click"/>
            <Button x:Name="CloseButton" Content="Đóng" Width="80" Height="30" Margin="20,5,5,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>