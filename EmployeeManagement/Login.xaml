<Window x:Class="EmployeeManagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="400" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >
            <TextBlock Text="Đăng nhập" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Username" />
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0,5,0,10" />

            <TextBlock Text="Password" />
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,5,0,20" PasswordChanged="PasswordBox_PasswordChanged"/>

            <Button Content="Đăng nhập" Command="{Binding LoginCommand}" Height="35" Background="#007ACC" Foreground="White"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="{Binding LoginMessage}" Foreground="Red" TextAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>
