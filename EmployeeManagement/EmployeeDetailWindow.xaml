<Window x:Class="EmployeeManagement.EmployeeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagement"
        mc:Ignorable="d"
        Title="Employee Details" Height="600" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Avatar:" FontWeight="Bold"/>
            <Image Source="{Binding Employee.AvatarUrl}" Height="100" Width="100" Margin="0,0,0,10"/>
            
            <TextBlock Text="Họ tên:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Employee.FullName}" Margin="0,0,0,10"/>

            <TextBlock Text="Ngày sinh:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Employee.DateOfBirth}" Margin="0,0,0,10"/>

            <TextBlock Text="Giới tính:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Employee.Gender}" Margin="0,0,0,10"/>

            <TextBlock Text="Địa chỉ:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Employee.Address}" Margin="0,0,0,10"/>

            <TextBlock Text="Số điện thoại:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Employee.Phone}" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Employee.Email}" Margin="0,0,0,10"/>

            <TextBlock Text="Phòng ban:" FontWeight="Bold"/>
            <TextBlock Text="{Binding DepartmentName}" Margin="0,0,0,10"/>

            <TextBlock Text="Chức vụ:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Employee.Position}" Margin="0,0,0,10"/>

            <TextBlock Text="Lương cơ bản:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Employee.BaseSalary}" Margin="0,0,0,10"/>

            <TextBlock Text="Ngày bắt đầu:" FontWeight="Bold"/>
            <TextBlock Text="{Binding StartDateString}" Margin="0,0,0,10"/>

            <TextBlock x:Name="MessageBlock" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
        

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Sửa" Width="80" Margin="5" Click="Edit_Click"/>
            <Button Content="Xóa" Width="80" Margin="5" Click="Delete_Click"/>
            <Button Content="Đóng" Width="80" Margin="5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
