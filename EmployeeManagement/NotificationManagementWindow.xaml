<Window x:Class="EmployeeManagement.NotificationManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Thông báo" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Quản lý Thông báo" FontSize="22" FontWeight="Bold" 
                   Foreground="#007ACC" Margin="0,0,0,15"/>

        <ListView x:Name="NotificationsListView" Grid.Row="1" 
                  BorderBrush="#DDDDDD" BorderThickness="1"
                  SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tiêu đề" DisplayMemberBinding="{Binding Title}" Width="150"/>
                    <GridViewColumn Header="Nội dung" DisplayMemberBinding="{Binding Message}" Width="250"/>
                    <GridViewColumn Header="Đối tượng" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TargetDepartment.DepartmentName, FallbackValue='Tất cả phòng ban'}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Người tạo" DisplayMemberBinding="{Binding CreatedByNavigation.FullName}" Width="120"/>
                    <GridViewColumn Header="Ngày tạo" DisplayMemberBinding="{Binding CreatedAt, StringFormat='dd/MM/yyyy HH:mm'}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="AddButton" Content="Thêm mới" Width="100" Height="30" Margin="5" Click="AddButton_Click"/>
            <Button x:Name="EditButton" Content="Sửa" Width="80" Height="30" Margin="5" Click="EditButton_Click"/>
            <Button x:Name="DeleteButton" Content="Xóa" Width="80" Height="30" Margin="5" Click="DeleteButton_Click"/>
            <Button x:Name="CloseButton" Content="Đóng" Width="80" Height="30" Margin="20,5,5,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>