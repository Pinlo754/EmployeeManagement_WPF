<Window x:Class="EmployeeManagement.ActivityLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagement"
        mc:Ignorable="d"
        Title="Lịch sử hoạt động" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ComboBox chọn account Admin -->
        <ComboBox Grid.Row="0" Margin="0,0,0,10" 
                  ItemsSource="{Binding Accounts}" 
                  SelectedItem="{Binding SelectedAccount}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Username, TargetNullValue='Tất cả Admin'}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- DataGrid hiển thị log -->
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" ItemsSource="{Binding Logs}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding LogId}" Width="50"/>
                <DataGridTextColumn Header="Thời gian" Binding="{Binding ActionTime, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Hành động" Binding="{Binding ActionType}" Width="100"/>
                <DataGridTextColumn Header="Bảng" Binding="{Binding TargetTable}" Width="100"/>
                <DataGridTextColumn Header="ID đối tượng" Binding="{Binding TargetId}" Width="100"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
