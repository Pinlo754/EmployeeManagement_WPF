<Window x:Class="EmployeeManagement.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Dashboard" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <DockPanel LastChildFill="True">
        <!-- Header -->
        <DockPanel Background="#007ACC" Height="50" DockPanel.Dock="Top">
            <TextBlock x:Name="WelcomeText" 
                       Foreground="White" 
                       FontSize="16" 
                       VerticalAlignment="Center" 
                       Margin="10,0,0,0"
                       Text="Xin chào, User"/>

            <Button Content="Logout" 
                    DockPanel.Dock="Right"
                    Width="80" 
                    Height="30" 
                    Margin="500,10,10,10"
                    VerticalAlignment="Center"
                    Click="Logout_Click"/>
        </DockPanel>

        <!-- Nội dung chính -->
        <StackPanel Margin="20">
            <Button Content="Xem thông tin cá nhân" Height="40" Margin="0,5"/>
            <Button Content="Chấm công" Height="40" Margin="0,5"/>
        </StackPanel>
    </DockPanel>
</Window>
