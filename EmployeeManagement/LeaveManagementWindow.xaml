<Window x:Class="EmployeeManagement.LeaveManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Nghỉ phép" Height="750" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Quản lý Đơn nghỉ phép" FontSize="22" FontWeight="Bold" 
                   Foreground="#007ACC" Margin="0,0,0,10"/>

        <DataGrid x:Name="LeaveDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectionMode="Single"
                  AlternatingRowBackground="#FAFAFA"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nhân viên" Binding="{Binding Employee.FullName}" Width="150"/>
                <DataGridTextColumn Header="Loại nghỉ" Binding="{Binding LeaveType}" Width="100"/>
                <DataGridTextColumn Header="Từ ngày" Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                <DataGridTextColumn Header="Đến ngày" Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                <DataGridTextColumn Header="Số ngày" Binding="{Binding DaysCount}" Width="80"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter Grid.Row="2" Height="5" Background="#E0E0E0" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,10"/>

        <TextBlock Grid.Row="3" Text="Tổng hợp ngày nghỉ nhân viên (Năm nay)" FontSize="18" 
                   FontWeight="SemiBold" Margin="0,10,0,10"/>

        <DataGrid x:Name="EmployeeLeaveSummaryGrid" Grid.Row="4"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectionMode="Single"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nhân viên" Binding="{Binding EmployeeName}" Width="*"/>
                <DataGridTextColumn Header="Tổng ngày phép" Binding="{Binding TotalAllowed}" Width="120"/>
                <DataGridTextColumn Header="Tổng ngày đã nghỉ" Binding="{Binding TotalTaken}" Width="140"/>
                <DataGridTextColumn Header="Số ngày còn lại" Binding="{Binding RemainingDays}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="Green"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <TextBlock Text="Chọn đơn ở Bảng 1 rồi:" VerticalAlignment="Center" Margin="0,0,10,0" FontStyle="Italic"/>
            <Button x:Name="ApproveButton" Content="Duyệt đơn" Width="100" Height="30" Margin="5" Click="ApproveButton_Click"/>
            <Button x:Name="RejectButton" Content="Từ chối" Width="100" Height="30" Margin="5" Click="RejectButton_Click"/>
            <Button x:Name="CloseButton" Content="Đóng" Width="80" Height="30" Margin="20,5,5,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>